runtime: nodejs20

env_variables:
  NODE_ENV: production

automatic_scaling:
  min_instances: 1
  max_instances: 10

handlers:
  # Static assets
  - url: /assets/.*
    static_files: dist/public/assets/\1
    upload: dist/public/assets/.*

  # API routes - handle before catch-all
  - url: /api/.*
    script: auto

  # All other routes to index.html (SPA)
  - url: /.*
    static_files: dist/public/index.html
    upload: dist/public/index.html